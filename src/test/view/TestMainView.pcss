@import "../../pcss/utils.pcss";

.TestMainView{
	
	@mixin fit-parent;
	z-index: 100;
	display: flex;
	flex-direction: row;
	
	nav.main{
		border-right: solid 1px $color-grey-light;
		padding-top: 32px;
		width: 200px;
		display: flex;
		flex-direction: column;
		
		a {
			font-size: 14px;
			padding: 8px 16px;
			font-weight: 400;
			letter-spacing: .1em;
			
			text-decoration: none;
		}

		a.active{
			color: $color-grey-darkest;
			
			background-color: $color-prim-lightest;
		}
	}

	section.main{
		flex: 1;
		background-color: $color-grey-lightest;
		display: flex;
	}
}