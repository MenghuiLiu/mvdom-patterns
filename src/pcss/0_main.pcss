@import "./utils.pcss";

*{
	box-sizing: border-box;
}
html, body{
	height: 100%;
}

body{
	margin: 0;
	padding: 0;
	font-family: 'Open Sans';
	font-size: 14px;
	font-weight: 400;
	/* @mixin fitparent; */
	border: solid 1px red;
}


/* reset the heading elements */ 
h1, h2, h3, h4{
	margin: 0;
	padding: 0;
	font-size: 14px;
	font-weight: normal;
	color: $txt;
}

/* --------- Layout Classes --------- */
/* fill the flex box */
.flex-fill{
	flex: 1;
}
/* --------- /Layout Classes --------- */