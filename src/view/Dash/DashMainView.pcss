@import "../../pcss/utils.pcss";

.DashMainView{
	flex: 1;
	display: flex;
	flex-direction: row;
	
	.column{
		display: flex;
		flex-direction: column;	
		flex: 1;
		margin-right: 32px;
		
		/* Last element should stick to the container border */
		&:last-child{
			margin-right: 0px;
		}
	}


	.summary{
		height: 300px;
		
		.content{
			display: flex;
			flex-direction: row;

			.metric{
				margin: 0px 32px 0 0;
				width: 150px;
				height: 150px;
				border-radius: 75px;
				border: solid 1px $bdr;
				display: flex;
				flex-direction: column;
				
				.data{
					flex: 1;
					font-size: 32px;
					margin-top: 32px;
					display: flex;
					justify-content: center;
					align-items: center;
				}

				label{
					font-size: 18px;
					font-weight: 200;
					padding: 4px 0;
					height: 48px;
					text-align: center;
				}					
			}
			
		}
	}

	.details{
		flex: 1;
	}

	.ui-card{
		margin-bottom: 32px;	
		
		/* Last element should stick to the container border */
		&:last-child{
			margin-bottom: 0px;
		}
	}


	/* --------- ui-table customization --------- */
	.ui-table{

		.ui-tr.changed-up{
			& .cpu, & .mem{
				color: green	
			}			
		}

		.ui-tr.changed-down{
			& .cpu, & .mem{
				color: red	
			}			
		}		

		.ui-tr.changed-new{
			& .cpu, & .mem{
				color: blue	
			}			
		}			
		/* Customize the header cell and body cells column by class name 
		   (since they have matching class name) */
		.pid{
			flex: none;
			width: 64px;
		}

	}	
	/* --------- /ui-table customization --------- */

}